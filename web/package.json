{
	"private": false,
	"name": "@1amageek/ballcap",
	"publishConfig": {
		"access": "public"
	},
	"version": "1.4.0",
	"scripts": {
		"lint": "tslint -p tslint.json",
		"build": "tsc -d",
		"prepare": "npm run build",
		"test:setup": "firebase setup:emulators:firestore",
		"serve:firestore": "firebase emulators:start --only firestore",
		"serve": "npm run build && firebase serve --only functions",
		"shell": "npm run build && firebase experimental:functions:shell",
		"start": "npm run shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"test": "jest"
	},
	"description": "Cloud Firestore model framework for TypeScript - Google",
	"contributors": [
		{
			"name": "Norikazu Muramoto",
			"email": "tmy0x3@icloud.com"
		}
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/1amageek/ballcap.ts.git"
	},
	"keywords": [
		"firestore",
		"firebase",
		"ballcap",
		"model",
		"typescript"
	],
	"author": "1amageek",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/1amageek/ballcap.ts/issues"
	},
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"dependencies": {
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@firebase/rules-unit-testing": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.1.0",
		"firebase": "^12.0.0",
		"jest": "^30.0.5",
		"ts-jest": "^29.4.0",
		"tslint": "^6.1.3",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"firebase": "^12.0.0"
	},
	"resolutions": {
		"**/gaxios": "1.8.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
